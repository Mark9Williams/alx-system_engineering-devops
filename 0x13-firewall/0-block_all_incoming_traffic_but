echo -e "updates\n"

sudo apt-get update

echo -e "Installing... ufw\n"

sudo apt-get install -y ufw

echo -e "ufw cofiguration...\n"

#blocks incoming traffic
sudo ufw default deny incoming
sudo uwf default allow outgoing

#Allow ports
sudo ufw allow 22
sudo ufw allow 88
sudo ufw allow 443

#Enable Fire Wall
sudo ufw enable

echo -e "successfull completion.\n"
