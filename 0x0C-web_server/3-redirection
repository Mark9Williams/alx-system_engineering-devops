#!/usr/bin/env bash

# A script that installs Nginx, sets up a basic configuration, and adds a redirect

# Update package lists
sudo apt update

# Install Nginx
sudo apt install -y nginx

# Define Nginx configuration file path
NGINX_CONF="/etc/nginx/sites-available/default"

# Configure Nginx to listen on port 80, serve "Hello World!", and redirect /redirect_me
sudo bash -c "cat > $NGINX_CONF" <<EOF
server {
    listen 80;
    root /var/www/html;
    index index.html;

    location / {
        try_files \$uri \$uri/ =404;
    }

    # Redirect /redirect_me to another page with a 301 status
    location /redirect_me {
        return 301 https://youtu.be/0xEjAR187is;
    }
}
EOF

# Create the HTML file to be served
sudo bash -c "echo 'Hello World!' > /var/www/html/index.html"

# Restart Nginx without using systemctl
sudo nginx -s reload

# Check if Nginx is running correctly
sudo nginx -t
